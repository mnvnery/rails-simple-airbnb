<div class="d-flex p-3">
<% @flats.each do |flat| %>
    <div class="card m-2" style="width: 18rem;">
      <div class="flat-card-img" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
      <div class="card-body p-3">
        <div class="flat-card-content ">
          <div class="flat-card-title">
             <h4><%= flat.name %></h4>
          </div>
          <p><%= flat.address %></p>
        </div>
        <div class="d-flex mr-3">
          <span>💸<%= flat.price_per_night %> </span>
          <span class="ml-3"> 👩🏻‍🤝‍👩🏿<%= flat.number_of_guests %></span>
        </div>
      </div>
      <div class="card-footer">
       <a href="#">More info</a>
      </div>
    </div>
  <% end %>
</div>
